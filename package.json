{
	"publisher": "zengjf",
	"name": "mdplant",
	"displayName": "MDPlant",
	"description": "markdown文档编写工具",
	"version": "1.0.5",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.mdpaste",
		"onCommand:extension.mdindex",
		"onCommand:extension.mdlist",
		"onCommand:extension.mdtable",
		"onCommand:extension.mdindent",
		"onCommand:extension.mdmenu",
		"onCommand:extension.mddir",
		"onLanguage:markdown",
		"workspaceContains:**/README.md"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.mdpaste",
				"title": "md.paste"
			},
			{
				"command": "extension.mdindex",
				"title": "md.index"
			},
			{
				"command": "extension.mdlist",
				"title": "md.list"
			},
			{
				"command": "extension.mdtable",
				"title": "md.table"
			},
			{
				"command": "extension.mdindent",
				"title": "md.indent"
			},
			{
				"command": "extension.mdmenu",
				"title": "md.menu"
			},
			{
				"command": "extension.mddir",
				"title": "Create MDPlant Template"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "extension.mdlist",
					"group": "navigation"
				},
				{
					"when": "editorFocus",
					"command": "extension.mdindex",
					"group": "navigation"
				},
				{
					"when": "editorFocus",
					"command": "extension.mdtable",
					"group": "navigation"
				},
				{
					"when": "editorFocus",
					"command": "extension.mdindent",
					"group": "navigation"
				},
				{
					"when": "editorFocus",
					"command": "extension.mdmenu",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "extension.mddir",
					"group": "navigation",
					"when": "explorerResourceIsFolder || resourceExtname == .md"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.mdpaste",
				"key": "ctrl+enter",
				"mac": "cmd+enter",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "MDPlant",
			"properties": {
				"MDPlant.plantuml.server": {
					"type": "string",
					"default": "http://www.plantuml.com/plantuml",
					"description": "plantuml server"
				},
				"MDPlant.plantuml.image.suffix": {
					"type": "string",
					"default": "svg",
					"description": "plantuml image suffix"
				},
				"MDPlant.plantuml.image.position": {
					"type": "string",
					"default": "up",
					"description": "plantuml image position"
				},
				"MDPlant.paste.image.suffix": {
					"type": "string",
					"default": "png",
					"description": "paste image suffix"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ZengjfOS/MDPlant"
	},
	"dependencies": {
		"mdplantlib": "file:../MDPlantLib"
	}
}
